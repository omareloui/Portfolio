---
export interface Props {
  date?: Date | string | number;
}

const { date } = Astro.props;

const _date = date ? new Date(date.toString()) : new Date();
---

<>
  <time datetime={_date.toISOString()}
    >{
      _date.toLocaleDateString("en-US", {
        month: "long",
        day: "numeric",
        year: "numeric",
      })
    }</time
  >
</>

<style lang="scss"></style>
