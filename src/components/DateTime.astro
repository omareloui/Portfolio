---
export interface Props {
  date: Date | string;
}

const { date } = Astro.props;

const _date = new Date(date.toString());
---

<>
  <time datetime={date.toString().slice(0, 10)}
    >{
      _date.toLocaleDateString("en-US", {
        month: "long",
        day: "numeric",
        year: "numeric",
      })
    }</time
  >
</>

<style lang="scss"></style>
