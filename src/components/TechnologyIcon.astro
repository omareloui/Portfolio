---
import type {
  Category as TechnologyCategory,
  Stack as TechnologyStack,
} from "@assets/typescript/technologies";

export interface Props {
  title: string;
  category?: TechnologyCategory;
  stack?: TechnologyStack;
  size?: string;
  hideTitle?: boolean;
  noBackground?: boolean;
}

const {
  title,
  size = "40px",
  category,
  stack,
  hideTitle = false,
  noBackground = false,
} = Astro.props;
---

<div class="technology" class:list={{ "technology--no-bg": noBackground }}>
  <div class="technology__icon">
    <img
      src={`/icons/tech/${title}.svg`}
      title={title}
      alt={title}
      loading="lazy"
    />
  </div>

  {
    !hideTitle && (
      <span
        class="technology__title"
        data-category={category}
        data-stack={stack}
      >
        {title}
      </span>
    )
  }
</div>

<style lang="scss" define:vars={{ size }}>
  @use "../assets/styles/mixins.scss" as *;

  .technology {
    --icon-size: var(--size);
    --padding: 5px;
    --final-size: calc(var(--icon-size) + var(--padding));

    background: var(--surface0);
    border-radius: 5px;
    padding: 0.5rem;
    margin: 0.5rem;
    isolation: isolate;

    &--no-bg {
      background: transparent;
      border-radius: 0;
      padding: 0;
      margin: 0;

      .technology__icon {
        padding: 0;
      }
    }

    &__icon {
      @include size(var(--final-size));
      display: flex;
      align-items: center;
      padding: var(--padding);

      @include gradient-shadow($opacity: 0.2);

      img {
        @include w(100%);
        @include h(max 100%);
        transition: 500ms var(--main-timing-function);
      }

      &:hover {
        img {
          scale: 1.3;
        }
      }
    }

    &__title {
      display: block;

      text-align: center;
      @include w(max var(--final-size));
      width: 100%;
      margin-top: 8px;

      font-size: 0.6rem;

      text-overflow: ellipsis;
      overflow: hidden;
    }

    @include tablet-up {
      --final-size: calc(var(--icon-size) * 1.4 + var(--padding));
      &__title {
        font-size: 0.9rem;
      }
    }
  }
</style>
