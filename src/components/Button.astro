---
import type { ClassList } from "@utils";
import { parseClasses } from "@utils";

export interface Props {
  background?: string;
  class?: ClassList | undefined;
  type?: "button" | "submit";
  dataElement?: string;
}

const {
  background,
  class: className,
  type = "button",
  dataElement,
} = Astro.props;

const classes = className ? parseClasses(className) : undefined;
---

<button class={classes} type={type} data-element={dataElement}>
  <slot />
</button>

<style define:vars={{ background }}>
  button {
    background: var(--background, none);
    border: none;
    padding: 5px 8px;
    cursor: pointer;
    font-weight: bold;
    text-transform: capitalize;

    outline-offset: 3px;
  }
</style>
