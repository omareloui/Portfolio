---
export interface Props {
  title: string;
  shadowTitle: string;
  isOdd?: boolean;
}

import Container from "./Container.astro";
import OddBG from "./OddBG.astro";
import SectionTitle from "./SectionTitle.astro";

const { title, shadowTitle, isOdd = false } = Astro.props;

const ContainerTag = isOdd ? OddBG : "div";
---

<ContainerTag class="section-container">
  <Container>
    <SectionTitle>
      {title}
      <Fragment slot="shadow-text">{shadowTitle}</Fragment>
    </SectionTitle>
    <slot />
  </Container>
</ContainerTag>

<style>
  .section-container {
    margin-block: 150px;
  }
</style>
