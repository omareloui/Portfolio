---
import { SEO } from "astro-seo";

export interface Props {
  title: string;
  description: string;
  ogImage?: string;
}

let { title, description, ogImage = "/images/heading.png" } = Astro.props;
---

<SEO
  title={title}
  description={description}
  openGraph={{
    basic: {
      title: title,
      url: `https://omareloui.com${Astro.url.pathname}`,
      type: "website",
      image: ogImage,
    },
    optional: { siteName: "Omar Eloui Portfolio", description },
    image: {
      url: ogImage,
      alt: "Heading image of the site.",
      type: "image/png",
      width: 1200,
      height: 630,
    },
  }}
  twitter={{
    creator: "@omareloui",
    card: "summary_large_image",
    image: ogImage,
    imageAlt: "Heading image of the site.",
    title: title,
    description,
  }}
  extend={{
    meta: [
      {
        property: "og:update_time",
        content: `${Math.floor(Number(new Date()) / 1000)}`,
      },
      { name: "theme-color", content: "#1b1b1b" },
    ],
    link: [
      {
        rel: "icon",
        href: "/icons/favicon-light.svg",
        type: "image/svg+xml",
      },
      { rel: "manifest", href: "/site.webmanifest" },
      { rel: "apple-touch-icon", href: "/pwd/icons/logo_x180.png" },
    ],
  }}
/>

<script type="application/ld+json" is:inline>
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "Omar Eloui",
    "url": "https://omareloui.com",
    "sameAs": ["https://github.com/omareloui", "https://linkedin.com/in/omareloui"],
    "jobTitle": "Software Engineer",
    "alumniOf": "Ain Shams University"
    "knowsAbout": ["Software Development", "Web Development", "Cloud Computing"],
    "birthDate": "1998-02-12",
    "birthPlace": "Egypt, Cairo",
    "telephone": "+201119447500",
    "seeks": {
      "@type": "Demand",
      "name": "Software Development Projects",
      "description": "Looking for freelance opportunities or projects involving web development, cloud computing, or scalable software solutions.",
      "skills": [
        "Web Development",
        "Cloud Computing",
        "Scalable Software Design"
      ],
      "areaServed": "Global",
      "availabilityStarts": "2025-01-21"
    }
  }
</script>
